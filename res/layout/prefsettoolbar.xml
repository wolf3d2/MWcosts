<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

<LinearLayout
    android:id="@+id/llad_pref_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    
</LinearLayout>

<ScrollView
    android:id="@+id/toolbar_sv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/toolbar_add"
    android:minHeight="50dp"
    android:paddingRight="5dp" 
    android:paddingLeft="5dp" 
    >
    
<LinearLayout
    android:id="@+id/toolbar_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    
<CheckBox
    android:id="@+id/toolbar_visible_cb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" 
    android:text="@+string/toolbar_show"
    />

<CheckBox
    android:id="@+id/toolbar_big_cb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" 
    android:text="@+string/toolbar_big"
    />

<TextView
    android:id="@+id/toolbar_linecnt_port"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onClick"
    android:paddingBottom="2dp"
    android:text="@+string/toolbar_linecnt_port"
    android:textSize="17dp"
    />

<TextView
    android:id="@+id/toolbar_linecnt_port_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" 
    android:clickable="true"
    android:onClick="onClick"
    android:text="[1]"
    />

<TextView
    android:id="@+id/toolbar_linecnt_land"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:text="@+string/toolbar_linecnt_land"
    android:clickable="true"
    android:onClick="onClick"
    android:textSize="17dp"
    />

<TextView
    android:id="@+id/toolbar_linecnt_land_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onClick"
    android:paddingBottom="10dp" 
    android:text="[1]"
    />

<TextView
    android:id="@+id/toolbar_command"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:text="@+string/scr_toolbar_command"
    android:textSize="17dp"
    android:textStyle="bold" />

<LinearLayout
    android:id="@+id/toolbar_list1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    
</LinearLayout>

</LinearLayout>
</ScrollView>
<Button
    android:id="@+id/toolbar_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/llad_pref_toolbar"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:onClick="onClick"
    android:text="@+string/add" />


</RelativeLayout>