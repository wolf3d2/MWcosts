<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" 
    >

<TextView
    android:id="@+id/cur_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_gravity="left"
    android:layout_toLeftOf="@+id/cur_date"
    android:maxLines="1"
    android:minLines="1"
    android:textColor="#fff"
    android:textSize="20dp" />

<TextView
    android:id="@+id/cur_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:minLines="1"
    android:maxLines="1"
    android:textColor="#fff"
    android:textSize="15dp" 
    />

<TextView
    android:id="@+id/cur_symb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cur_name"
    android:layout_alignParentLeft="true"
    android:layout_toRightOf ="@+id/cur_value"
    android:layout_gravity="left"
    android:maxLines="1"
    android:minLines="1"
    android:textColor="#0f0"
    android:textSize="15dp" 
    />

<TextView
    android:id="@+id/cur_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cur_name"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:maxLines="1"
    android:minLines="1"
    android:textColor="#f00"
    android:textSize="20dp" 
    />

<TextView
    android:id="@+id/cur_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cur_symb"
    android:layout_alignParentLeft="true"
    android:visibility="gone"
    />

<TextView
    android:id="@+id/cur_base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cur_symb"
    android:layout_alignParentRight="true"
    android:maxLines="1"
    android:minLines="1"
    android:textColor="#0f0"
    android:textSize="10dp" 
    />

</RelativeLayout>
