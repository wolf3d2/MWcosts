<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_about"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:id="@+id/llad_about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    
</LinearLayout>

<ScrollView
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/llad_about"
    android:layout_alignParentTop="true"
    android:minHeight="50dp"
    android:paddingRight="7dp" 
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_alignParentTop="true"
    android:paddingLeft="7dp" 
    android:layout_above="@+id/AdView_a"
    >
    

<TextView
        android:id="@+id/Ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold" 
        android:text="@+string/version"
	    android:textSize="15dp" 
        android:textColor="#00f" />

<TextView
        android:id="@+id/about_autor"
	    style="@style/label_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@+string/about_autor"
        />

<Button
        android:id="@+id/about_other_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:onClick="onClickOtherApp"
        android:text="@+string/about_other_app"
        />

<Button
        android:id="@+id/about_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:onClick="onClickDiary"
        android:text="@+string/about_diary"
        />

<Button
        android:id="@+id/about_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:onClick="onClickFeedback"
        android:text="@+string/act_feedback"
        />

<TextView
    android:id="@+id/about_desc"
    style="@style/label_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@+string/about_desc"
    android:textColor="#00f"
    android:textSize="14dp" 
    />

<TextView
    android:id="@+id/about_other"
    style="@style/label_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@+string/about_other"
    android:textColor="#000" 
    />

</LinearLayout>
</ScrollView>
</RelativeLayout>