<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" 
    >

<TextView
    android:id="@+id/rec_path"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:visibility="gone"
    />

<TextView
    android:id="@+id/rec_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/rec_path"
    android:drawablePadding="2dp"
    android:gravity="right"
    android:maxLines="2"
    android:minLines="1"
    android:textColor="#fff"
    android:textSize="14dp" 
    />

<TextView
    android:id="@+id/rec_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rec_create"
    android:layout_alignParentLeft="true"
    android:drawablePadding="2dp"
    android:gravity="left"
    android:maxLines="2"
    android:minLines="1"
    android:textColor="#fff"
    android:textSize="18dp" />

<TextView
    android:id="@+id/rec_cur"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below ="@+id/rec_name"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/rec_create"
    android:layout_gravity="left"
    android:textColor="#0f0"
    android:textSize="14dp" 
    />

<TextView
    android:id="@+id/rec_recalc_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rec_cur"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/rec_create"
    android:layout_gravity="left"
    android:textColor="#fff"
    android:textSize="14dp" />

</RelativeLayout>
